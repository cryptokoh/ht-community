# Backend API Configuration
API_BASE_URL=http://localhost:3001/api/v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/healing_temple_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=healing-temple-media

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# App Configuration
NODE_ENV=development
PORT=3001
APP_NAME=The Healing Temple Community
APP_URL=https://healingtemple.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Location Configuration
TEMPLE_LATITUDE=37.7749
TEMPLE_LONGITUDE=-122.4194
GEOFENCE_RADIUS_METERS=100

# Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token